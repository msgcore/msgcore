# Application
NODE_ENV=development
PORT=3000

# Security (REQUIRED - generate with: openssl rand -hex 32)
ENCRYPTION_KEY=
JWT_SECRET=

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
API_KEY_VALIDATION_LIMIT=10

# Database
DB_USER=msgcore
DB_PASSWORD=msgcore_password
DB_NAME=msgcore
DB_PORT=5432
DATABASE_URL=postgresql://msgcore:msgcore_password@localhost:5432/msgcore?schema=public

# Redis
REDIS_PASSWORD=redis_password
REDIS_PORT=6379
REDIS_URL=redis://:redis_password@localhost:6379

# Auth0 (optional - enables JWT authentication)
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_AUDIENCE=https://api.msgcore.dev
AUTH0_CLIENT_ID=your-client-id-here
AUTH0_CLIENT_SECRET=your-client-secret-here

# Sentry Error Tracking (optional)
SENTRY_ENABLED=false
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
SENTRY_DEBUG=false
SENTRY_RELEASE=

# API Configuration
API_BASE_URL=http://localhost:3000