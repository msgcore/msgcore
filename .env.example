# ==============================================================================
# MsgCore Unified Environment Configuration
# Backend (NestJS) + Frontend (React/Vite)
# ==============================================================================

# ------------------------------------------------------------------------------
# Application
# ------------------------------------------------------------------------------
NODE_ENV=development
PORT=3000

# Base URL (used by both backend and frontend)
# Backend: webhook registration
# Frontend: API calls
# Development: http://localhost:3000
# Production: https://msgcore.yourdomain.com
MSGCORE_API_URL=http://localhost:3000

# ------------------------------------------------------------------------------
# Security (REQUIRED - generate with: openssl rand -hex 32)
# ------------------------------------------------------------------------------
ENCRYPTION_KEY=
JWT_SECRET=

# ------------------------------------------------------------------------------
# CORS Origins (comma-separated)
# Should match MSGCORE_API_URL and any additional origins
# Development (local): http://localhost:3000,http://localhost:5173
# Development (Docker): http://localhost:8080
# Production: https://msgcore.yourdomain.com
# ------------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# ------------------------------------------------------------------------------
# Rate Limiting
# ------------------------------------------------------------------------------
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
API_KEY_VALIDATION_LIMIT=10

# ------------------------------------------------------------------------------
# Database
# ------------------------------------------------------------------------------
DB_USER=msgcore
DB_PASSWORD=msgcore_password
DB_NAME=msgcore
DB_PORT=5432
DATABASE_URL=postgresql://msgcore:msgcore_password@localhost:5432/msgcore?schema=public

# ------------------------------------------------------------------------------
# Redis
# ------------------------------------------------------------------------------
REDIS_PASSWORD=redis_password
REDIS_PORT=6379
REDIS_URL=redis://:redis_password@localhost:6379

# ------------------------------------------------------------------------------
# Sentry Error Tracking (Optional)
# ------------------------------------------------------------------------------
SENTRY_ENABLED=false
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
SENTRY_DEBUG=false
SENTRY_RELEASE=

# ------------------------------------------------------------------------------
# Frontend Configuration
# ------------------------------------------------------------------------------

# API Version
MSGCORE_API_VERSION=v1

# Environment
MSGCORE_ENV=development